@model RegisterViewModel

@{
    ViewBag.Title = "Register My Account";
}

<h2>Register</h2>

@using (Html.BeginForm("Index", "Register", FormMethod.Post))
{
    <div class="well">

        @Html.ValidationSummary()

        <div class="row">

            <div class="col-md-4">

                <div class="form-group">
                    <label for="Username">Specify a User Name</label>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="Email">Email Address</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="Password">Password</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="ConfirmPassword">Confirm Password</label>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>

                <input type="submit" value="Register" class="btn btn-primary" />
                <a href="@Url.RouteUrl("login")" class="btn btn-default">Cancel</a>

            </div>

            <div class="col-md-4">

                <div class="form-group">
                    <label for="FirstName">First Name</label>
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="LastName">Last Name</label>
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="Company">Company Name</label>
                    @Html.TextBoxFor(m => m.Company, new { @class = "form-control" })
                </div>

            </div>

        </div>

    </div>
}
