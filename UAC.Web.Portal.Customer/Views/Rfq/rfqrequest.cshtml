
@{
    ViewBag.Title = "Submit a RFQ";
}

<h2>Submit a RFQ</h2>

<form>

    <div class="well">

        <div class="row">

            <div class="col-md-4">

                <div class="form-group">
                    <label for="Part Number">Part Number</label>
                    <input type="text" name="PartNumber" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="Alloy">Alloy</label>
                    <input type="text" name="Alloy" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="Temper">Temper</label>
                    <input type="text" name="Temper" class="form-control" />
                </div>



            </div>

            <div class="col-md-4">

                <div class="form-group">
                    <label for="Quantity">Quantity</label>
                    <input type="text" name="Quantity" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="QuantityUom">Quantity UOM</label>
                    <select name="QuantityUom" class="form-control">
                        <option value="In">In</option>
                        <option value="Ft">Ft</option>
                        <option value="Pcs">Pcs</option>
                        <option value="Lbs">Lbs</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="Specifications">Specifications</label>
                    <textarea name="Specifications" class="form-control" rows="2"></textarea>
                </div>

            </div>

            <div class="col-md-4">

                <div class="form-group">
                    <label for="Length">Length</label>
                    <input type="text" name="Length" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="LengthUom">Length UOM</label>
                    <select name="LengthUom" class="form-control">
                        <option value="In">In</option>
                        <option value="Ft">Ft</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="Notes">Notes</label>
                    <textarea name="Notes" class="form-control" rows="2"></textarea>
                </div>

            </div>

        </div>

        <input type="submit" class="btn btn-primary" value="Submit" />
        <a href="@Url.RouteUrl("portal")" class="btn btn-default">Cancel</a>

    </div>

</form>